<?xml version="1.0"?>
<Container version="2">
  <Name>Seederr</Name>
  <Repository>kheopsian/seederr:latest</Repository>
  <Registry>https://hub.docker.com/r/kheopsian/seederr</Registry>
  <Network>br0</Network>
  <MyIP/>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/Kheopsian/Seederr/issues</Support>
  <Project>https://github.com/Kheopsian/seederr</Project>
  <Overview>
    Seederr is a smart torrent manager that automatically moves files between fast storage (SSD) and slow storage (Array) based on their seeding performance. It aims to maximize seeding efficiency by keeping the most popular torrents on the SSD.
  </Overview>
  <Category>Downloaders</Category>
  <WebUI/>
  <TemplateURL/>
  <Icon>https://raw.githubusercontent.com/Kheopsian/seederr/main/logo.png</Icon>
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <DateInstalled/>
  <DonateText/>
  <DonateLink/>
  <Requires>
    Requires a functional and network-accessible instance of qBittorrent and PostgreSQL.
  </Requires>
  
  <Config Name="SSD Download Path" Target="/downloads/hot" Default="/mnt/disks/your_ssd_pool/downloads/hot" Mode="rw" Description="Path to the 'hot' downloads folder on your SSD." Type="Path" Display="always" Required="true"/>
  <Config Name="Array Download Path" Target="/downloads/cold" Default="/mnt/user/data/downloads/cold" Mode="rw" Description="Path to the 'cold' downloads folder on your array." Type="Path" Display="always" Required="true"/>
  
  <Config Name="QBIT_HOST" Target="QBIT_HOST" Default="192.168.1.100" Description="IP address of qBittorrent." Type="Variable" Display="always" Required="true"/>
  <Config Name="QBIT_PORT" Target="QBIT_PORT" Default="8080" Description="qBittorrent WebUI Port." Type="Variable" Display="always" Required="true"/>
  <Config Name="QBIT_USER" Target="QBIT_USER" Default="admin" Description="qBittorrent username." Type="Variable" Display="always" Required="true"/>
  <Config Name="QBIT_PASS" Target="QBIT_PASS" Default="" Description="qBittorrent password." Type="Variable" Display="always" Required="true" Mask="true"/>
  
  <Config Name="DB_HOST" Target="DB_HOST" Default="192.168.1.100" Description="IP address of the PostgreSQL database." Type="Variable" Display="advanced" Required="true"/>
  <Config Name="DB_PORT" Target="DB_PORT" Default="5432" Description="PostgreSQL port." Type="Variable" Display="advanced" Required="true"/>
  <Config Name="DB_NAME" Target="DB_NAME" Default="torrents_stats" Description="Database name." Type="Variable" Display="advanced" Required="true"/>
  <Config Name="DB_USER" Target="DB_USER" Default="" Description="Database username." Type="Variable" Display="advanced" Required="true"/>
  <Config Name="DB_PASS" Target="DB_PASS" Default="" Description="Database password." Type="Variable" Display="advanced" Required="true" Mask="true"/>
  
  <Config Name="SSD_PATH_IN_CONTAINER" Target="SSD_PATH_IN_CONTAINER" Default="/downloads/hot" Description="DO NOT CHANGE: Internal container path for the SSD." Type="Variable" Display="advanced" Required="true"/>
  <Config Name="ARRAY_PATH_IN_CONTAINER" Target="ARRAY_PATH_IN_CONTAINER" Default="/downloads/cold" Description="DO NOT CHANGE: Internal container path for the Array." Type="Variable" Display="advanced" Required="true"/>
  
  <Config Name="CHECK_INTERVAL_SECONDS" Target="CHECK_INTERVAL_SECONDS" Default="3600" Description="Check interval in seconds (3600 = 1h)." Type="Variable" Display="advanced" Required="true"/>
  <Config Name="SSD_TARGET_CAPACITY_PERCENT" Target="SSD_TARGET_CAPACITY_PERCENT" Default="90" Description="Target fill percentage for the SSD." Type="Variable" Display="advanced" Required="true"/>
  <Config Name="MAX_MOVES_PER_CYCLE" Target="MAX_MOVES_PER_CYCLE" Default="1" Description="Max number of moves per cycle (-1 for unlimited in Dry Run)." Type="Variable" Display="advanced" Required="true"/>
  <Config Name="DRY_RUN" Target="DRY_RUN" Default="true" Description="Set to 'false' to enable actual file moves." Type="Variable" Display="always" Required="true"/>
  
  <Config Name="WEIGHT_LONG_TERM" Target="WEIGHT_LONG_TERM" Default="0.8" Description="Weight for the long-term score (0.0-1.0)." Type="Variable" Display="advanced" Required="false"/>
  <Config Name="WEIGHT_SHORT_TERM" Target="WEIGHT_SHORT_TERM" Default="0.2" Description="Weight for the short-term score (0.0-1.0)." Type="Variable" Display="advanced" Required="false"/>
  <Config Name="EMA_ALPHA" Target="EMA_ALPHA" Default="0.012" Description="Smoothing factor for the long-term moving average (EMA)." Type="Variable" Display="advanced" Required="false"/>
</Container>